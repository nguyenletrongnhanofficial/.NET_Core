@page
@model eStore.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
}

@section Scripts {
    <script>
        GetProductDetail(@ViewData["ProductId"]);
    </script>
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        
        <dd class="col-sm-10" id="product-name"></dd>
        
        <dt class="col-sm-2">Weight</dt>
        
        <dd class="col-sm-10" id="product-weight"></dd>
        
        <dt class="col-sm-2">Unit Price</dt>
        
        <dd class="col-sm-10" id="product-price"></dd>
        
        <dt class="col-sm-2">Unit In Stock</dt>
        
        <dd class="col-sm-10" id="product-unit"></dd>
        
        <dt class="col-sm-2">Category</dt>
        
        <dd class="col-sm-10" id="product-category"></dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@ViewData["ProductId"]">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
