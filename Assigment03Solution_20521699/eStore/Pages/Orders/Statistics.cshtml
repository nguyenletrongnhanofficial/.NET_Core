@page
@model eStore.Pages.Orders.Statistics

@section Scripts
{
    <script>
        GetStatistics();
    </script>
}

<h3>Sale Statistics</h3>

<div class="container border" style="padding:20px">
    <form method="post" asp-page="ReportSale">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.startDate">Start Date</label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.startDate" class="form-control" id="startDate"/>
            </div>
            <span class="text-danger" asp-validation-for="@Model.startDate"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.endDate">End Date</label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.endDate" class="form-control" id="endDate"/>
            </div>
            <span class="text-danger" asp-validation-for="@Model.endDate"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input class="btn btn-primary" value="Report" id="btn-report"/>
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>

<h3>Daily Statistics</h3>
<table class="table">
    <thead>
        <th>Date</th>
        <th>Total</th>
    </thead>
    <tbody></tbody>
</table>