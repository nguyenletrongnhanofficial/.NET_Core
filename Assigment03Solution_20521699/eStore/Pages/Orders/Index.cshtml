@page
@model eStore.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

@section Scripts
{
    @if (ViewData["IsUser"] != null)
    {
        <script>GetOrdersByUserId(@ViewData["UserId"]);</script>
    }
    else
    {
        <script>GetOrderList();</script>
    }
}

<h1>Orders</h1>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Ordered Date</th>
        <th>Required Date</th>
        <th>Shipped Date</th>
        <th>Freight</th>
        <th>User</th>
        <th></th>
    </tr>
    </thead>
    
    <tbody></tbody>
</table>
